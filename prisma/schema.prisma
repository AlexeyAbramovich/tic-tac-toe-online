generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum GameStatus {
  IDLE
  IN_PROGRESS
  GAME_OVER
  GAME_OVER_DRAW
}

model Game {
  id         String     @id @default(cuid())
  status     GameStatus
  players    User[]     @relation("games")
  winner     User?      @relation(fields: [winnerId], references: [id])
  field      Json
  winnerId   String?
  gameOverAt String?
}

model User {
  id           String @id @default(cuid())
  login        String
  rating       Int
  passwordHash String
  salt         String @default("")
  games        Game[] @relation("games")
  winnerGames  Game[]
}
